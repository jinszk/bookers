<h1>編集画面</h1>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, class: "book_body" %>
    <%= f.submit '保存' %>
<% end %>
<%= link_to "詳細", book_path(@book.id), class: "show_#{@book.id}" %><p>|</p><%= link_to "戻る", books_path, class: "back" %>