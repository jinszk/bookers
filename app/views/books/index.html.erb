<h1>Books</h1>
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "詳細" , book_path(book.id), class: "show_#{book.id}" %></td>
        <td><%= link_to "編集" , edit_book_path(book.id), class: "edit_#{book.id}" %></td>
        <td><%= link_to "削除", book_path(book.id), class: "destroy_#{book.id}", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>新規投稿</h1>

<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>

    <h4>Body</h4>
    <%= f.text_area :body, class: "book_body" %>

    <%= f.submit '投稿' %>

<% end %>




